@model IEnumerable<HepsiDeveloper.Data.Entities.Urun>


@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/Shared/_LayoutCreate.cshtml";
}


<style>
    .no-image-placeholder {
        width: 50px;
        height: 50px;
        background-color: #ccc;
    }



</style>


<h1>Yeni İlan Oluştur</h1>
<br />
<p>
    <a class="btn btn-outline-primary" asp-action="Create">Yeni Ürün Oluştur</a>
</p>
<table class="table">
<thead>
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fiyat)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="/resimler/@item.Resimler.FirstOrDefault()?.DosyaAdi" style="max-height:50px">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aciklama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Düzenle</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm mx-2">Detay</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Sil</a>
            </td>
        </tr>
    }
</tbody>
</table>
